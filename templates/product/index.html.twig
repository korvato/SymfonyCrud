{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Label</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.ref }}</td>
                <td>{{ product.label }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('product_show', {'ref': product.ref}) }}">show</a>
                    <a href="{{ path('product_edit', {'ref': product.ref}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
